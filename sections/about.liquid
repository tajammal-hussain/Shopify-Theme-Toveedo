        src="https://ecom.square43.com/_next/image?url=%2Fimages%2Fhome%2Fnature%2Flist.webp&amp;w=1080&amp;q=75"
        style="color: transparent; translate: none; rotate: none; scale: none; transform: translate3d(0px, 0px, 0px) rotate(-0.0819deg);"
      >
    </div>
  </div>
</div>
{% schema %}
{
  "name": "About",
  "settings": [
    {
      "type": "select",
      "id": "desktop_content_position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center",
      "label": "Desktop Content Position"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "Full Width"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Your Heading Here",
          "label": "Heading Text"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            { "value": "h1", "label": "H1" },
            { "value": "h2", "label": "H2" }
          ],
          "default": "h1",
          "label": "Heading Size"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text Block",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Your text here.</p>",
          "label": "Text Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}
