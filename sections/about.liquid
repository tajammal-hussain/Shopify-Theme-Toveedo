        decoding="async"
        data-nimg="1"
        class="mainLeaf h-auto w-[25vw] origin-bottom-right"
        srcset="https://ecom.square43.com/_next/image?url=%2Fimages%2Fhome%2Fnature%2Flistmain.webp&amp;w=640&amp;q=75 1x, https://ecom.square43.com/_next/image?url=%2Fimages%2Fhome%2Fnature%2Flistmain.webp&amp;w=1080&amp;q=75 2x"
